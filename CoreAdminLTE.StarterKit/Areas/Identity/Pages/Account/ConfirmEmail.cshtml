@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Success!</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <partial name="AdminLTE/_Styles" />
</head>
<body class="hold-transition login-page" style="background: white!important;">
    <div class="login-box" style="width:600px!important;">
        <div class="login-logo">
            <a href="https://girishgodage.in">Email <b>Confirmed</b></a>
        </div>
        <!-- /.login-logo -->
        <p class="login-box-msg">Please sign in to continue.</p>
        <!-- /.login-card-body -->
        <div style="text-align: -webkit-center;">
            <p class="mb-1">
                <a type="button" asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary">Sign In</a>
            </p>
            <br />
            <small style="font-size:15px"> Made with <span style="color: #e25555;">&hearts;</span> by <a href="http://girishgodage.in">girishgodage</a> and <a href="http://adminlte.io">AdminLTE.io</a>.</small>

        </div>
    </div>
    <partial name="AdminLTE/_Scripts" />

</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
